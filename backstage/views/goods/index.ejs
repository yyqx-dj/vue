                </div>
                <!--
                列表展示
            -->
                <div class="table-responsive">
                    <table class="table table-striped ">
                        <thead>
                            <tr>
                                <th>编号</th>
                                <th>图标</th>
                                <th>名称</th>
                                <th>价格</th>
                                <th>数量</th>
                                <th>类别</th>
                                <th>状态</th>
                                <th>描述</th>
                                <th class="text-center">操作</th>
                            </tr>
                        </thead>
                        <tbody>
                            <%  for(let i  in goods) { %>
                            <tr>
                                <td><%= goods[i]._id %></td>
                                <td>
                                    <img src="/<%= goods[i].goodspic %>" alt="暂无图片" width="30px" height="30px">
                                </td>
                                <td><%= goods[i].goodsname %></td>
                                <td><%= goods[i].price %></td>
                                <td><%= goods[i].num %></td>
                                <td><%= goods[i].typename %></td>
                                <td>
                                    <% if(goods[i].status == 1){ %>
                                    新品
                                    <%}else if(goods[i].status == 2){%>
                                    热卖
                                    <%}else{%>
                                    下架
                                    <%}%>
                                    
                                </td>
                                <td><%= goods[i].desc %></td>
                                <td class="text-center">
                                    <a href="/goods/edit?id=<%= goods[i]._id %>" class="btn btn-info">修改</a>
                                    <a href="/goods/doDel?id=<%= goods[i]._id %>&goodspic=<%= goods[i].goodspic %>" class="btn btn-warning">删除</a>
                                </td>
                            </tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>

            </div>
        </div>
    </div>

</body>

</html>