    <div class="container-fluid">
        <div class="row">


            <!-- left -->

            <%- include  ../common/left.ejs   %>

            <div class="col-sm-10">
                <ol class="breadcrumb">
                    <li class="active">商品管理
                    </li>
                    <li class="active">商品列表
                    </li>
                </ol>
                <div class="panel panel-default">
